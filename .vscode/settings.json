// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": true, // hide the old "out" folder since we use esbuild now
        "dist": false // show the "dist" folder with esbuild compiled JS files
    },
    "search.exclude": {
        "out": true, // exclude old "out" folder from search
        "dist": true, // exclude "dist" folder from search results
        "node_modules": true
    },
    // Turn off tsc task auto detection since we use esbuild
    "typescript.tsc.autoDetect": "off",
    // Enable proposed APIs for extension development
    "extensions.experimental.affinity": {
        "vicanent.gcmp": 1
    },
    // 编辑器配置：统一使用4个空格缩进
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[jsonc]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    // 调试配置优化
    "debug.javascript.usePreview": true,
    "debug.openDebug": "openOnDebugBreak",
    // esbuild 相关优化
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "typescript.preferences.includePackageJsonAutoImports": "auto",
    // 为供应商配置提供 JSON Schema 校验和提示
    "json.schemas": [
        {
            "fileMatch": [
                "src/providers/config/*.json"
            ],
            "url": "./.vscode/providerConfig.schema.json"
        }
    ]
}